<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:background="@color/app_background">

    <TextView
        android:id="@+id/hello_user_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="15sp"
        android:textSize="30sp"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/information_text_view"
        android:layout_below="@id/hello_user_text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold"
        android:layout_margin="15sp"
        android:textSize="20sp"
        android:text="Choose the source of your clip!"
        android:textColor="@color/white" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/source_recycler_view"
        android:layout_below="@id/information_text_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</RelativeLayout>

