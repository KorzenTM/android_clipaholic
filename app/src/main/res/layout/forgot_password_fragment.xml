<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1E90FF">

    <TextView
        android:id="@+id/hello_text_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15sp"
        android:text="Forget it?\nDont't \nworry!"
        android:textSize="50sp"
        android:textColor="@color/white"
        android:textStyle="bold"/>

    <ImageView
        android:layout_toEndOf="@id/hello_text_view"
        android:layout_marginTop="80sp"
        android:layout_marginEnd="10sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scaleX="2.7"
        android:scaleY="2.7"
        app:srcCompat="@mipmap/reset"/>

    <RelativeLayout
        android:background="@drawable/relative_layout_rounded_background"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/hello_text_view"
        android:gravity="center_vertical"
        android:layout_margin="10sp">

        <TextView
            android:id="@+id/welcome_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Please enter the email address that your account was created with."
            android:layout_margin="10sp"
            android:textStyle="bold"
            android:textColor="#4169E1"
            android:textSize="30sp"/>

        <EditText
            android:id="@+id/reset_password_email_edit_text"
            android:layout_below="@id/welcome_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10sp"
            android:hint="Email"/>

        <Button
            android:id="@+id/reset_password_button"
            android:layout_below="@id/reset_password_email_edit_text"
            android:width="250sp"
            android:layout_margin="10sp"
            android:backgroundTint="#2E8B57"
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="RESET PASSWORD"/>

    </RelativeLayout>

</RelativeLayout>