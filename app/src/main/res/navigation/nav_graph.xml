<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/logFragment">


    <fragment
        android:id="@+id/logFragment"
        tools:layout="@layout/log_fragment"
        android:name="pl.edu.pum.movie_downloader.LogFragment"
        android:label="LogFragment" >
        <action
            android:id="@+id/action_logFragment_to_registerFragment"
            app:destination="@id/registerFragment"
            app:enterAnim="@anim/fragment_fade_enter"
            app:exitAnim="@anim/fragment_fade_exit"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
    <fragment
        android:id="@+id/registerFragment"
        android:name="pl.edu.pum.movie_downloader.RegisterFragment"
        tools:layout="@layout/register_fragment"
        android:label="RegisterFragment" >
        <action
            android:id="@+id/action_registerFragment_to_logFragment"
            app:destination="@id/logFragment"
            app:enterAnim="@android:anim/slide_out_right"
            app:exitAnim="@android:anim/slide_in_left"
            app:popEnterAnim="@anim/nav_default_pop_enter_anim"
            app:popExitAnim="@anim/nav_default_pop_exit_anim" />
    </fragment>
</navigation>